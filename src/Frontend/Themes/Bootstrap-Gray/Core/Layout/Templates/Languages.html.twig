{% if languages %}
<ul class="nav navbar-nav navbar-right">
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'lbl.Language'|trans|ucfirst }} <img src="{{ THEME_URL }}/Core/Layout/images/flags/{{ FRONTEND_LANGUAGE }}.png"> <span class="caret"></span></a>
		<ul class="dropdown-menu" id="language-drodown">
			{% for lng in languages %}
			<li {% if lng.current %}class="active"{% endif %}>
					<a href="{{ lng.url }}" >{{ lng.label|upper }} <img src="{{ THEME_URL }}/Core/Layout/images/flags/{{ lng.label }}.png" id="flag"></a>
			</li>
			{% endfor %}
		</ul>
	</li>
</ul>
{% endif %}
